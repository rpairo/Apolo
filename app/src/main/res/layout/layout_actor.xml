<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewDetalle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_actor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imagenActor"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/nombrePersonaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagenActor"
            android:layout_toRightOf="@+id/imagenActor"
            android:text="Tony Stark / Iron Man" />

        <TextView
            android:id="@+id/nombreActor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombrePersonaje"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imagenActor"
            android:layout_toRightOf="@+id/imagenActor"
            android:text="Robert Downey Jr."
            android:textSize="20dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>