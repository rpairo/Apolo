<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.rpairo.apolo.fragments.series.FragmentoSeriesFavoritas">


    <LinearLayout
        android:id="@+id/series_vacia"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/texto_series_vacia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La lista esta vacia"
            android:textColor="@color/primary_text"
            android:textSize="30dp"
            style="@style/TextAppearance.AppCompat.Body2"/>

        <ImageView
            android:id="@+id/imagen_series_vacias"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_peliculas"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>