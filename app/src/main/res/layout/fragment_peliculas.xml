<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.rpairo.apolo.fragments.peliculas.FragmentoPeliculas">

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager_peliculas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fam_peliculas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"

        app:elevation="6dp"
        app:fab_addButtonColorNormal="@color/accentColor"
        app:fab_addButtonColorPressed="@color/accentDarkColor"
        app:fab_addButtonPlusIconColor="@color/icons"

        app:layout_anchor="@id/pager_peliculas"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="12dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_buscar_peliculas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/accentColor"
            app:fab_colorPressed="@color/accentDarkColor"
            app:fab_icon="@drawable/ic_search_white_24dp"
            app:fab_title="Buscar" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_asistente_peliculas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/accentColor"
            app:fab_colorPressed="@color/accentDarkColor"
            app:fab_icon="@drawable/ic_keyboard_voice_white_24dp"
            app:fab_title="Asistente" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</FrameLayout>